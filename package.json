{
  "name": "click-macro-recorder",
  "productName": "Click Macro Recorder",
  "version": "1.0.3",
  "description": "Mouse/Keyboard Macro Recorder",
  "main": "dist/main/main.js",
  "scripts": {
    "build:main": "tsc -p tsconfig.json",
    "build:renderer": "tsc -p ts-src/renderer/tsconfig.json",
    "copy:html": "node -e \"require('fs').copyFileSync('ts-src/renderer/index.html', 'dist/renderer/index.html')\"",
    "build": "npm run build:main && npm run build:renderer && npm run copy:html",
    "start": "npm run build && electron-forge start",
    "dev": "npm run build && electron-forge start",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [
    "macro",
    "recorder",
    "electron"
  ],
  "author": {
    "name": "happa0827",
    "email": "happa.0827@proton.me"
  },
  "license": "MIT",
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "uiohook-napi": "^1.5.0",
    "update-electron-app": "^3.1.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/publisher-github": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@types/node": "^20.10.0",
    "electron": "39.2.7",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/happa0827/macro-2.git"
  }
}
